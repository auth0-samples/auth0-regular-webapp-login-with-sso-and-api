extends layout

block content
  br
  .w3-container
    .w3-card-4.w3-center.w3-white(style="padding: 50px;")
      img(src=user.picture)
      p Welcome #{user.nickname}
      div
        button(id="check-session") Check Session
        button(id="get-profile") Get Profile
        button(id="get-contacts") List Contacts
        button(id="get-appointments") List Appointments
        button(id="check-hack") Check Hack
        button(id="am-i-secure") Am I Secure?
        div(id="results")
          pre
  script.

    $('#check-session').on('click', function(e) {
      e.preventDefault();
      window.location = "http://jwlm.com:3000/api/session";
    });

    setInterval(function() {
      // periodically check for SSO status
      checkSession();
    }, 120000);

    $('#get-profile').on('click', function(e) {
      e.preventDefault();
      $.ajax({
        url: "http://jwlm.com:3000/api/userinfo",
        method: "GET",
        success: function (data) {
          $('#results pre').text(JSON.stringify(data, null, 2))
        }
      });
    });

    $('#get-appointments').on('click', function(e) {
      e.preventDefault();
      $.ajax({
        url: "http://jwlm.com:3000/api/appointments",
        method: "GET",
        success: function (data) {
          $('#results pre').text(JSON.stringify(data, null, 2))
        }
      });
    });

    $('#get-contacts').on('click', function(e) {
      e.preventDefault();
      $.ajax({
        url: "http://jwlm.com:3000/api/contacts",
        method: "GET",
        success: function (data) {
          $('#results pre').text(JSON.stringify(data, null, 2))
        }
      });
    });

    $('#check-hack').on('click', function(e) {
      e.preventDefault();
      $.ajax({
        url: "http://jwlm.com:3000/api/check_hack",
        method: "GET",
        success: function (data) {
          $('#results pre').text(JSON.stringify(data, null, 2))
        }
      });
    });
    
    $('#am-i-secure').on('click', function(e) {
      e.preventDefault();
      $.ajax({
        url: "http://jwlm.com:3000/api/hasBeenHacked",
        method: "GET",
        success: function (data) {
          $('#results pre').text(JSON.stringify(data, null, 2))
        }
      });
    });
